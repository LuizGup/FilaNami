// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum UserType {
  ADMIN
  DEFAULT_USER
}

enum Prioridade {
  COMUM
  PRIORIDADE
  PLUSEIGHTY
}

enum StatusSenha {
  AGUARDANDO
  EM_ATENDIMENTO
  EM_SERVICO
  CONCLUIDO
}

model Usuario {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  userType UserType? @default(DEFAULT_USER)

  @@map("USUARIOS")
}

model Guiche {
  idGuiche      Int     @id @default(autoincrement()) @map("id_guiche")
  numeroGuiche  Int     @map("numero_guiche")
  senha         String

  idSetor       Int     @map("id_setor")
  setor         Setor   @relation(fields: [idSetor], references: [idSetor])

  senhasAtendidas Senha[]   @relation("GuicheAtendente")

  historicos    Historico[]

  @@map("GUICHE")
}

model Setor {
  idSetor Int      @id @default(autoincrement()) @map("id_setor")
  setor   String

  guiches Guiche[]

  @@map("SETORES")
}

model Senha {
  idSenha Int @id @default(autoincrement()) @map("id_senha")

  idGuicheAtendente Int?    @map("id_guiche")
  guicheAtendente   Guiche? @relation("GuicheAtendente", fields: [idGuicheAtendente], references: [idGuiche])

  setorDestino String     @map("setor_destino")
  
  setorAtual   String     @default("Atendimento") @map("setor_atual")
  
  senha        String     @map("senha") 
  prioridade   Prioridade @map("prioridade")

  dataEmissao   DateTime   @default(now()) @map("data_emissao")
  dataConclusao DateTime?  @map("data_conclusao") 
  
  status        StatusSenha @map("status")

  historicos    Historico[]

  @@map("SENHAS")
}

model Historico {
  idHistorico Int @id @default(autoincrement()) @map("id_historico")

  idGuiche  Int    @map("id_guiche")
  guiche    Guiche @relation(fields: [idGuiche], references: [idGuiche])

  idSenha   Int    @map("id_senhas")
  senha     Senha  @relation(fields: [idSenha], references: [idSenha])

  @@map("HISTORICO")
}
